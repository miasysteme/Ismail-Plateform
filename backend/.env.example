# ISMAIL Platform - Backend Environment Variables
# Copiez ce fichier vers .env et remplissez les valeurs

# ==============================================
# SERVER CONFIGURATION
# ==============================================
NODE_ENV=development
PORT=8080
API_VERSION=v1

# ==============================================
# SUPABASE CONFIGURATION
# ==============================================
SUPABASE_URL=https://xfuehgxhcktleaofhxfy.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# ==============================================
# JWT CONFIGURATION
# ==============================================
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DATABASE_URL=postgresql://postgres:password@db.supabase.co:5432/postgres

# ==============================================
# CORS CONFIGURATION
# ==============================================
CORS_ORIGIN=http://localhost:3000,https://ismail-platform.netlify.app
CORS_CREDENTIALS=true

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# EMAIL CONFIGURATION (Resend)
# ==============================================
RESEND_API_KEY=your-resend-api-key
EMAIL_FROM=noreply@ismail-platform.com

# ==============================================
# FILE UPLOAD CONFIGURATION (Cloudinary)
# ==============================================
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ==============================================
# MOBILE MONEY CONFIGURATION
# ==============================================
# Orange Money
ORANGE_MONEY_CLIENT_ID=your-orange-client-id
ORANGE_MONEY_CLIENT_SECRET=your-orange-client-secret
ORANGE_MONEY_API_URL=https://api.orange.com/orange-money-webpay/dev/v1

# MTN Mobile Money
MTN_MOMO_API_KEY=your-mtn-api-key
MTN_MOMO_API_SECRET=your-mtn-api-secret
MTN_MOMO_SUBSCRIPTION_KEY=your-mtn-subscription-key

# ==============================================
# MONITORING & LOGGING
# ==============================================
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# ==============================================
# REDIS CONFIGURATION (Upstash)
# ==============================================
REDIS_URL=your-upstash-redis-url
REDIS_TOKEN=your-upstash-redis-token

# ==============================================
# SECURITY
# ==============================================
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret
ENCRYPTION_KEY=your-32-character-encryption-key

# ==============================================
# BUSINESS CONFIGURATION
# ==============================================
DEFAULT_CURRENCY=XOF
DEFAULT_COUNTRY=CI
PLATFORM_COMMISSION_RATE=0.05
CREDIT_CONVERSION_RATE=50
